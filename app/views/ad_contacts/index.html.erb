<legend>Listing of Buyer Emails</legend>

<% if (@ad_contacts.count < 1) %>
   <p>No User Email.</p>
<% else %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Comment</th>
      <th>Sent Date</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @ad_contacts.each do |ad_contact| %>
      <tr>
        <td><%= ad_contact.name %></td>
        <td><%= ad_contact.email %></td>
        <td><%= ad_contact.phone %></td>
        <td><%= ad_contact.comment %></td>
        <td><%= ad_contact.created_at.strftime("%d-%m-%Y") %></td>
        <td><%= link_to 'Show', ad_contact %></td>
        <td><%= link_to 'Edit', edit_ad_contact_path(ad_contact) %></td>
        <td><%= link_to 'Destroy', ad_contact, confirm: 'Are you sure?', method: :delete %></td>
     </tr>
   <% end %>
 </tbody>
</table>

<% end %>

<br />

